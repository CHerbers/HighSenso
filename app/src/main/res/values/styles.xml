<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    general-->
    <style name="standard_text">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/asap</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="general_textView" parent="standard_text">
        <item name="android:textSize">@dimen/standard_textSize</item>
        <item name="android:padding">@dimen/standard_textView_padding</item>
    </style>

    <style name="title_textView" parent="general_textView">
        <item name="android:textSize">@dimen/title_textSize</item>
    </style>

    <style name="general_button" parent="standard_text">
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="general_editText" parent="standard_text">
        <item name="android:textSize">@dimen/editText_textSize</item>
    </style>

    <style name="general_spinner" parent="standard_text">

    </style>

    <!--    start fragment-->
    <style name="start_fragment_login_buttons" parent="general_button">
        <item name="android:textSize">@dimen/start_login_buttons_textSize</item>
        <item name="backgroundTint">@color/start_login_buttons_color</item>
    </style>

    <style name="start_fragment_start_button" parent="general_button">
        <item name="android:textSize">@dimen/start_fragment_start_button_textSize</item>
        <item name="android:background">@android:drawable/btn_default</item>
    </style>

    <style name="start_fragment_textView" parent="general_textView">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="start_fragment_definition_text" parent="start_fragment_textView">
        <item name="android:background">@color/highlighted_light_blue_background_color</item>
    </style>

    <style name="start_fragment_subtitle" parent="start_fragment_textView">
        <item name="android:textSize">@dimen/start_fragment_definition_title_textSize</item>
    </style>

    <!--    questioning fragment-->
    <style name="questioning_fragment_button" parent="general_button">
        <item name="android:textSize">@dimen/question_next_button_textSize</item>
        <!--        <item name="android:background">@android:drawable/btn_default_small</item>-->
<!--        <item name="backgroundTint">@color/question_answerButton_default_color</item>-->
    </style>

    <style name="questioning_textView" parent="general_textView">
        <item name="android:textSize">@dimen/question_textSize</item>
    </style>

    <style name="questioning_fragment_chip">
        <item name="android:layout_width">@dimen/chip_width</item>
        <item name="android:layout_height">@dimen/chip_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="chipBackgroundColor">@color/question_radioButton_unselected_color</item>
        <item name="checkedIconTint">@color/caution_red_background_color</item>
    </style>

    <style name="questioning_fragment_radioButtons">
        <item name="android:textSize">@dimen/question_radioButton_textSize</item>
        <item name="buttonTint">@color/question_radioButton_unselected_color</item>
        <item name="android:layout_marginHorizontal">@dimen/question_radioButton_horizontal_margin</item>
    </style>

<!--result fragment-->
    <style name="result_content_textView" parent="general_textView">
        <item name="android:textAlignment">viewStart</item>
    </style>

<!--    about fragment-->
    <style name="about_fragment_textView" parent="general_textView">
        <item name="android:textAlignment">viewStart</item>
    </style>

<!--    reset password dialog-->
    <style name="reset_password_dialog_button" parent="general_button">
        <item name="android:textSize">@dimen/reset_password_dialog_button_textSize</item>
        <item name="android:layout_height">@dimen/reset_password_dialog_button_height</item>
    </style>

    <!--    location dialog-->
    <style name="location_dialog_button" parent="standard_text">
        <item name="android:textSize">@dimen/location_dialog_button_textSize</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="location_dialog_button_default" parent="location_dialog_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/location_dialog_button_default_color</item>
    </style>

    <style name="location_dialog_button_done" parent="location_dialog_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/location_dialog_button_done_color</item>
    </style>

    <!--    register dialog-->
    <style name="register_dialog_button" parent="standard_text">
        <item name="android:textSize">@dimen/location_dialog_button_textSize</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="register_dialog_button_register" parent="register_dialog_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/register_dialog_button_register_color</item>
    </style>

    <style name="register_dialog_button_to_login" parent="register_dialog_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/register_dialog_button_to_login_color</item>
    </style>

    <!--    login dialog-->
    <style name="login_dialog_button" parent="standard_text">
        <item name="android:textSize">@dimen/location_dialog_button_textSize</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="login_dialog_button_login" parent="login_dialog_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/register_dialog_button_register_color</item>
    </style>

    <style name="login_dialog_button_to_register" parent="login_dialog_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/register_dialog_button_to_login_color</item>
    </style>

    <style name="login_dialog_forgotPW_textView" parent="standard_text">
        <item name="android:textColor">@color/login_dialog_forgotPW_text_color</item>
        <item name="android:textSize">@dimen/login_dialog_forgotPW_textSize</item>
    </style>
</resources>