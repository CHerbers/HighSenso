<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="resultViewModel"
            type="name.herbers.android.highsenso.result.ResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/result_content_textView"
            style="@style/standard_text"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@{resultViewModel.resultContent}"
            android:textSize="@dimen/standard_textSize"
            app:layout_constraintBottom_toTopOf="@+id/send_result_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_disclaimer_textView" />

        <TextView
            android:id="@+id/result_disclaimer_textView"
            style="@style/standard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_disclaimer"
            app:layout_constraintBottom_toTopOf="@+id/result_content_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/send_result_button"
            style="@style/general_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_result_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_content_textView" />

        <Button
            android:id="@+id/back_to_start_button"
            style="@style/general_button"
            android:text="@string/back_to_start_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>